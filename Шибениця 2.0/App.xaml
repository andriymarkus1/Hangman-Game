                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        

        <Style x:Key="FormButtonStyle" BasedOn="{StaticResource BackToMenuButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}">
                            <Grid>
                                <TextBlock x:Name="buttonText" 
           Text="{TemplateBinding Content}" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Center"/>
                                <Image x:Name="HintButtonHoverImage" 
                       Source="\Visual\Main_Menu\Stickman.png"
       HorizontalAlignment="Center" 
       VerticalAlignment="Center" 
       Visibility="Visible" Stretch="Fill"/>
                                <Image x:Name="HintButtonEnabledImage" 
       HorizontalAlignment="Center" 
       VerticalAlignment="Center" 
       Visibility="Collapsed" Stretch="Fill"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HintButtonHoverImage" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="HintButtonHoverImage" Property="Source" Value="\Visual\Main_Menu\StickmanHover.png"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="HintButtonEnabledImage" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="HintButtonEnabledImage" Property="Source" Value="\Visual\Main_Menu\StickmanHover.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CustomTabItemStyle" BasedOn="{StaticResource {x:Type TabItem}}" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <ContentPresenter x:Name="ContentSite" HorizontalAlignment="Center" VerticalAlignment="Center" ContentSource="Header" Margin="12,2,12,2"/>
                                <Image x:Name="PressedImage" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" Stretch="Fill"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="PressedImage" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PressedImage" Property="Source" Value="\Visual\Shop\Set_Hover.png"/>
                            </Trigger>
                            
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Application.Resources>
</Application>
